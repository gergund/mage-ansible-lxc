upstream fastcgi {
    server {{ php_fpm_socket  }};
}

server {
    listen       {{ 80 }};
    server_name  {{ vhost_server_name }};

    root   {{ vhost_document_root  }};
    access_log  /var/log/nginx/magento-access.log  main;

    set $ssl "off";
    if ($http_x_forwarded_proto = "https") {
        set $ssl "on";
    }

    location / {
        index  index.php;
        try_files $uri $uri/ @handler;
         expires 1h;
    }
    
    location ~ /(media|skin|js) {
        try_files $uri =404;
    }

    location ~ /(app|includes|lib|pkginfo|report|var|shell|downloadable|customer|.git|.svn) {
         deny all;
    }

    location ~* ^.+.(xml|phtml|ini|git|svn|.hta.+) {
        deny all;
    }

    location @handler {
        rewrite / /index.php;
    }

    location ~ \.php/  {
        rewrite ^(.*.php)/ $1 last;
    }

    location ~ \.php$ {
        if (!-e $request_filename) { rewrite / /index.php last; }

        expires        off; ## Do not cache dynamic content
        fastcgi_pass   fastcgi;

        fastcgi_connect_timeout 600;
        fastcgi_read_timeout 600;
        fastcgi_send_timeout 600;
        
        fastcgi_buffer_size 4k;
        fastcgi_buffers 512 4k;
        fastcgi_busy_buffers_size 8k;
        fastcgi_temp_file_write_size 256k;
        fastcgi_intercept_errors off;

        fastcgi_next_upstream error timeout http_500;
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        #fastcgi_param  MAGE_RUN_CODE store_view_1_w_1_g_1;
        #fastcgi_param  MAGE_RUN_TYPE store;
        include        fastcgi_params;
    }

}
